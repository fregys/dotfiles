# Dynamic theme colors
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

# ------- General -------
# theme = TokyoNight Moon
font-family = "JetBrainsMonoNL Nerd Font"
font-style = Regular
font-size = 11
window-theme = ghostty
confirm-close-surface = false
font-feature = -calt, -liga, -dlig
# window-padding-x = 14
# window-padding-y = 14
resize-overlay = never
gtk-toolbar-style = flat

# Cursor styling
cursor-style = "bar"
cursor-style-blink = false

# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
shell-integration-features = no-cursor,ssh-env

initial-command = fish
shell-integration = fish

# Slowdown mouse scrolling
mouse-scroll-multiplier = 3

#  ------- Keybinds -------
keybind = ctrl+t=new_tab
keybind = ctrl+w=close_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+shift+arrow_left=move_tab:-1
keybind = ctrl+shift+arrow_right=move_tab:1


# Fix general slowness on hyprland (https://github.com/ghostty-org/ghostty/discussions/3224)
async-backend = epoll
